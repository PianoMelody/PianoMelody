@using PianoMelody.I18N
@model PianoMelody.Web.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        @using (Html.BeginForm("ChangePassword", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-lg-4 col-lg-offset-4">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = Resources.OldPassword })
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = Resources.ConfirmPassword })
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = Resources.NewPassword })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="form-group">
                        <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                            <input type="submit" value="@Resources.ChangePassword" class="btn btn-info btn-block"/>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
