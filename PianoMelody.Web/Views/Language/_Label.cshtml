@model PianoMelody.Web.Models.BindingModels.ResourcesBindingModel
@{ 
    var action = this.ViewContext.RouteData.Values["action"] as string;
}

<div class="col-lg-3">
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">@Resources._Key</span>
            @if (action == "edit")
            {
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            }
            else
            {
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = Resources._Name } })
            }
        </div>
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>
</div>

<div class="col-lg-3">
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><img src="~/Images/en.png" /></span>
            @Html.EditorFor(model => model.EnValue, new { htmlAttributes = new { @class = "form-control", placeholder = "en " + Resources._Label } })
        </div>
        @Html.ValidationMessageFor(model => model.EnValue, "", new { @class = "text-danger" })
    </div>
</div>

<div class="col-lg-3">
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><img src="~/Images/ru.png" /></span>
