@{ 
    var group = Request.Params["group"];
    var manufacturer = Request.Params["manufacturer"];
    var condition = Request.Params["condition"];
}

@if (Model.EndPage > 1)
{
    <div class="col-lg-4 col-md-4">
        <ul class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <li>
                    <a href="@Url.Action("Index", new { group = group, manufacturer = manufacturer, condition = condition, page = Model.CurrentPage - 1 })" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }

            @for (var page = Model.StartPage; page <= Model.EndPage; page++)
            {
                <li class="@(page == Model.CurrentPage ? "active" : "")">
                    <a href="@Url.Action("Index", new { group = group, manufacturer = manufacturer, condition = condition, page = @page })">@page</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li>
                    <a href="@Url.Action("Index", new { group = group, manufacturer = manufacturer, condition = condition, page = Model.CurrentPage + 1 })" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>
    </div>
}
