@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            @if (User.IsInRole("Admin"))
            {
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Administration</a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Add administrator", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                        <li>@Html.ActionLink("Change password", "ChangePassword", "Profile")</li>
                    </ul>
                </li>
            }
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()">Log Off</a>
            </li>
        </ul>
    }
}
