@{
    var routeValues = this.ViewContext.RouteData.Values;
    var controller = routeValues["controller"] as string;
    var action = routeValues["action"] as string;
}

<li>
    <a class="btn btn-default" href='@Url.Action(@action, @controller, new { language = "bg" })'>
        <img src='@Url.Content("~/Images/bg.png")' />
    </a>
</li>
<li>
    <a class="btn btn-default" href='@Url.Action(@action, @controller, new { language = "en" })'>
        <img src='@Url.Content("~/Images/us.png")' />
    </a>
</li>
<li>
    <a class="btn btn-default" href='@Url.Action(@action, @controller, new { language = "ru" })'>
        <img src='@Url.Content("~/Images/ru.png")' />
    </a>
</li>
