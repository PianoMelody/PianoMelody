@model PianoMelody.Web.Models.ViewModels.ProductViewModel

@{
    ViewBag.Title = Resources._Delete + " " + Resources._Product;
}

<h3>@Resources._AreYouSure</h3>
<hr />

<article class="panel panel-default">
    @Html.Partial("_ProductInfo", Model)

     @if (User.IsInRole("Admin"))
     {
         <div class="panel-footer">
             @using (Html.BeginForm("Delete", "Products", new { returnUrl = this.Request.QueryString["returnUrl"] }, FormMethod.Post, new { }))
             {
                 @Html.AntiForgeryToken()

                 <div class="form-actions no-color">
                     <input type="submit" value="@Resources._Delete" class="btn btn-danger" />
                 </div>
             }
         </div>
     }
</article>
