<!DOCTYPE html>
<html class="no-js" lang="@CultureHelper.GetCurrentNeutralCulture()" dir="@(CultureHelper.IsRightToLeft() ? "rtl" : "ltr")">
<head>
    <title>@ViewBag.Title - @Resources.Logo</title>
    <meta charset="utf-8" lang="@CultureHelper.GetCurrentNeutralCulture()" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.Keywords" />
    <link rel="alternate" hreflang="@CultureHelper.GetCurrentNeutralCulture()" href="@Request.Url" />
    <link href="https://fonts.googleapis.com/css?family=Philosopher:700|Marmelad" rel="stylesheet">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink(Resources.Logo, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    @Html.Partial("_SwitchLanguage")
                    <ul class="nav navbar-nav">
                        <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-home" aria-hidden="true"></span></a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Resources.Products <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink(Resources.Promotions, "Promotions", "Products")</li>
                                @{
                                    Html.RenderAction("Menu", "Products");
                                }
                                <li>@Html.ActionLink(Resources.All, "Index", "Products")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink(Resources.Services, "Index", "Services")</li>
                        <li>@Html.ActionLink(Resources.Info, "Index", "Info")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Resources.About <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink(Resources.About, "About", "Home")</li>
                                <li>@Html.ActionLink(Resources.Gallery, "Index", "Gallery")</li>
                                <li>@Html.ActionLink(Resources.News, "Index", "News")</li>
                                <li>@Html.ActionLink(Resources.References, "Index", "References")</li>
                            </ul>
                        </li>
                        <li><a href="@Url.Action("Contact", "Home")">@Resources.Contacts <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <main class="cd-main-content container body-content">
        @Html.Partial("_Notifications")
        @RenderBody()
    </main>

    <footer class="fluid">
        <div class="container">
            <div class="col-lg-4 links">
                <ul>
                    <li>@Html.ActionLink(Resources.About, "About", "Home")</li>
                    <li>@Html.ActionLink(Resources.Services, "Index", "Services")</li>
                    <li>@Html.ActionLink(Resources.Info, "Index", "Info")</li>
                    <li>@Html.ActionLink(Resources.News, "Index", "News")</li>
                    <li>@Html.ActionLink(Resources.Contacts, "Contact", "Home")</li>
                </ul>
            </div>
            <div class="col-lg-4 social">
                <a href="https://www.facebook.com/%D0%9F%D0%B8%D0%B0%D0%BD%D0%BE-%D0%BC%D0%B0%D0%B3%D0%B0%D0%B7%D0%B8%D0%BD-%D0%9C%D0%95%D0%9B%D0%9E%D0%94%D0%98%D0%AF-%D0%9F%D0%98%D0%90%D0%9D%D0%90-%D0%B8-%D0%A0%D0%9E%D0%AF%D0%9B%D0%98-Piano-store-Melody-119361421463741/" rel="alternate" target="_blank"><img src="~/Images/facebook.png" class="social-icon" /></a>
                <a href="https://plus.google.com/105912479979767940315" rel="alternate" target="_blank"><img src="~/Images/google-plus.png" class="social-icon" /></a>
                <a href="https://twitter.com/melodiaeood" rel="alternate" target="_blank"><img src="~/Images/twitter.png" class="social-icon" /></a>
                <a href="https://www.pinterest.com/pin/147563325269810817/" rel="alternate" target="_blank"><img src="~/Images/pinterest.png" class="social-icon" /></a>
                <a id="viber"><img src="~/Images/viber.png" class="social-icon" /></a>
            </div>
            <div class="col-lg-4 text-center language">
                <div class="row">
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.Partial("_LoginPartial")
                    }
                    else
                    {
                        <p class="copyright">&copy; @DateTime.Now.Year - @Resources.Logo</p>
                    }
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/shared")
    @RenderSection("scripts", required: false)
    <script>
        var buttonID = "viber";
        var text = "";
        document.getElementById(buttonID).setAttribute('href', "viber://forward?text=" + encodeURIComponent(text + " " + window.location.href));
    </script>
</body>
</html>
