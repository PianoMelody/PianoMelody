<!DOCTYPE html>
<html lang="@CultureHelper.GetCurrentNeutralCulture()" dir="@(CultureHelper.IsRightToLeft() ? "rtl" : "ltr")">
<head>
    <title>@ViewBag.Title - @Resources.Logo</title>
    <meta charset="utf-8" lang="bg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="@ViewBag.Keyword" />
    <meta name="description" content="@ViewBag.Description" />
    <link rel="alternate" hreflang="bg" href="" />
    @Styles.Render("~/Content/css")
    @Scripts.RenderFormat(@"<script src=""{0}"" async></script>", "~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(Resources.Logo, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_SwitchLanguage")
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(Resources.About, "About", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">@Resources.Products <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu" id="products-menu">
                            @{ Html.RenderAction("Menu", "Product"); }
                        </ul>
                    </li>

                    <li>@Html.ActionLink(Resources.Services, "Index", "Service")</li>
                    <li>@Html.ActionLink(Resources.Info, "Index", "Info")</li>
                    <li>@Html.ActionLink(Resources.Gallery, "Index", "Gallery")</li>
                    <li>@Html.ActionLink(Resources.News, "Index", "News")</li>
                    <li>@Html.ActionLink(Resources.References, "Index", "Reference")</li>
                    <li>@Html.ActionLink(Resources.Contacts, "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @Html.Partial("_Notifications")
        @RenderBody()
    </div>

    <footer class="container">
        <hr />
        <div class="col-lg-6">
            <p>&copy; @DateTime.Now.Year - @Resources.Logo</p>
        </div>
        <div class="col-lg-6">
            @Html.Partial("_LoginPartial")
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/products-menu")
    @RenderSection("scripts", required: false)
</body>
</html>
