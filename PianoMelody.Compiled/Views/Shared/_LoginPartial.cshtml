@using PianoMelody.I18N

@using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
{
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        @if (User.IsInRole("Admin"))
        {
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@Resources._Administration</a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink(Resources._AddAdministrator, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                    <li>@Html.ActionLink(Resources._ChangePassword, "ChangePassword", "Profile")</li>
                    <li>@Html.ActionLink(Resources._ArticleGroups, "Index", "ArticleGroup")</li>
                </ul>
            </li>
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()">@Resources._LogOff</a>
            </li>
        }

        @Html.Partial("_SwitchLanguage")
    </ul>
}

