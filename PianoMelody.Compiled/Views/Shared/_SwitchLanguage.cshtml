@{
    var routeValues = this.ViewContext.RouteData.Values;
    var controller = routeValues["controller"] as string;
    var action = routeValues["action"] as string;
    string id = string.Empty;
    if (routeValues.ContainsKey("id"))
    {
        id = routeValues["id"] as string;
    }
}

<li>
    <a class="btn btn-default" href='@Url.Action(@action, @controller, new { culture = "en", id = id })'>
        <img src='@Url.Content("~/Images/us.png")' />
    </a>
</li>
<li>
    <a class="btn btn-default" href='@Url.Action(@action, @controller, new { culture = "ru", id = id })'>
        <img src='@Url.Content("~/Images/ru.png")' />
    </a>
</li>
<li>
    <a class="btn btn-default" href='@Url.Action(@action, @controller, new { culture = "bg", id = id })'>
        <img src='@Url.Content("~/Images/bg.png")' />
    </a>
</li>
