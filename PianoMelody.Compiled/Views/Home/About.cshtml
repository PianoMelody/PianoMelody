@{
    ViewBag.Title = Resources.About;
    ViewBag.Description = Resources.AboutDescription;
    ViewBag.Keywords = Resources.AboutKeywords;
}

<div class="row">
        <div class="col-lg-12">
            @if (User.IsInRole("Admin"))
            {
                <p>
                    @Html.ActionLink(Resources._Edit, "Edit", new { html = "_EditAbout", returnUrl = Request.RawUrl }, new { @class = "btn btn-primary" })
                </p>
                <hr />
            }

            @Html.Raw(Resources._EditAbout)
        </div>
</div>