@model PianoMelody.Web.Models.BindingModels.EmailBindingModel

@{
    ViewBag.Title = Resources.Contacts;
    ViewBag.Keyword = "";
    ViewBag.Description = "";
}

<div class="row">
    <div class="col-lg-8">
        @using (Html.BeginForm("SendEmail", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="@Resources._Send" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-lg-4">
        <h4>Работно време</h4>
        <p>
            От ПОНЕДЕЛНИК до ПЕТЪК - от 10.00ч. - до 18.00ч.
            СЪБОТА - от 10.00ч. - до 14.00ч.
            НЕДЕЛЯ - ПОЧИВЕН ДЕН.
            В СЛУЧАЙ, ЧЕ ЖЕЛАЕТЕ ДА НИ ПОСЕТИТЕ ИЗВЪН РАБОТНОТО НИ ВРЕМЕ ИЛИ НЕДЕЛЯ, МОЛЯ НЕ СЕ КОЛЕБАЙТЕ ДА СЕ СВЪРЖЕТЕ С НАС, ЗА ДА УГОВОРИМ ПРЕДВАРИТЕЛНО ЧАС ЗА ПОСЕЩЕНИЕ.
            Очакваме Ви!
        <p>
</div>
</div>

<div class="row">
    <div class="col-lg-5 col-lg-offset-1">
        <h4>Адрес</h4>
        <p>Ул."Св. Иван Рилски" № 14 Гр. София 1606. </p>
        <p>Магазинът се намира в непосредствена близост до петте кьошета , между бул."Скобелев" и бул."Христо Ботев". За идващите с автомобил, ул. "Св.Ив.Рилски" е еднопосочна и е отворена от към бул. "Хр.Ботев". Паркирането е платено, зоната е ЗЕЛЕНА. Но Клиентите ни получават безплатен талон за паркиране в ЗЕЛЕНА ЗОНА от магазина ни. За идващите с обществен транспорт: Спирка "Бул.Прага". Тролей № 1, 2, 5 , 8, и 9. Трамвай № 6 и 7. Автобус № 260. Най-близката метро станция е НДК.</p>
    </div>
    <div class="col-lg-6">
        <iframe class="pull-right" width="600" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?q=%D0%A3%D0%BB.%22%D0%A1%D0%B2.%20%D0%98%D0%B2%D0%B0%D0%BD%20%D0%A0%D0%B8%D0%BB%D1%81%D0%BA%D0%B8%22%20%E2%84%96%2014%20%D0%93%D1%80.%20%D0%A1%D0%BE%D1%84%D0%B8%D1%8F%201606&key=AIzaSyCPZx4SKBUO8HE60L1IfT11peH1Y18_PMw" allowfullscreen></iframe>
    </div>
</div>

